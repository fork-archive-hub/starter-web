{
  "compilerOptions": {
    "outDir": "./build/ts/",
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "types": [
      "event-hooks-webpack-plugin",
      "@emotion/react/types/css-prop"
    ],
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "jsx": "react",
    "paths": {
      "src/*": ["src/*"],
      "starter/*": ["starter/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./typings/**/*.d.ts",
    "./starter/**/*",
    "./"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
