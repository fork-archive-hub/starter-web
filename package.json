{
  "name": "starter-web",
  "version": "0.1.0",
  "description": "Starter code for creating modern web app",
  "private": true,
  "scripts": {
    "webpack": "webpack --config config/webpack.config.ts",
    "build:client": "npm run webpack",
    "build:server": "npm run webpack -- --env.platform=server",
    "build:client:watch": "npm run webpack -- --watch",
    "build:server:watch": "npm run webpack -- --watch --env.platform=server",
    "build:all": "run-p --silent build:client build:server",
    "build:all:watch": "run-p --silent build:client:watch build:server:watch",
    "build": "npm run -s clean && npm run build:all",
    "launch:server": "nodemon --quiet --watch build/server --exec 'node build/server/index.js'",
    "launch:server:wait": "wait-on build/server/index.js && npm run launch:server",
    "start:all": "run-p --silent build:all:watch launch:server:wait type-check:watch",
    "start": "npm run -s clean && npm run start:all",
    "build-ts": "tsc --emitDeclarationOnly",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "clean": "npx rimraf build",
    "clean:all": "npx rimraf build node_modules package-lock.json",
    "blame": "git log -S",
    "blist": "npx browserslist",
    "blist:update": "npx browserslist@latest --update-db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baadal/starter-web.git"
  },
  "author": "Abhishek Raj <abhi@raj.me>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/copy-webpack-plugin": "^6.2.0",
    "@types/dotenv-webpack": "^5.0.0",
    "@types/express": "^4.17.8",
    "@types/node": "^14.14.7",
    "@types/nodemon": "^1.19.0",
    "@types/react": "^16.9.52",
    "@types/react-dom": "^16.9.8",
    "@types/webpack": "^4.41.24",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^2.5.0",
    "babel-loader": "^8.1.0",
    "browserslist": "^4.14.7",
    "copy-webpack-plugin": "^6.3.0",
    "dotenv-webpack": "^4.0.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.1",
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "browserslist": [
    "defaults",
    "> 0.1%",
    "last 2 versions",
    "not dead"
  ]
}
